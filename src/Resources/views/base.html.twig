{% block base_doctype %}
<!DOCTYPE html>
{% endblock %}

{% block base_html %}
<html lang="{{ app.request.locale }}"
{% endblock %}

{% block base_head %}
    {% include 'layout/meta.html.twig' %}
{% endblock %}


{% block base_body %}
<body>
    {% block base_body_inner %}
        {% block base_navigation %}
            <div class="nav-main">
                {% block base_navigation_inner %}
                    {% include 'layout/navigation/navigation.html.twig' %}
                {% endblock %}
            </div>
        {% endblock %}

        {% block base_main %}
            <main class="content-main">
                {% block base_flashbags %}{% endblock %}

                {% block base_main_inner %}
                    {% block base_breadcrumb %}{% endblock %}

                    {% block base_content %}
                        <div class="container bg-dark text-white rounded">
                            {% block base_content_inner %}{% endblock %}
                        </div>
                    {% endblock %}
                {% endblock %}
            </main>
        {% endblock %}
    {% endblock %}

    {% block base_footer %}{% endblock %}
</body>
{% endblock %}
</html>
