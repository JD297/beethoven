{% extends 'base.html.twig' %}

{% block base_content_inner %}
    {% for forum in page.forumCollection %}
        <table class="table table-hover table-striped table-dark text-center mt-4">
            <thead class="text-uppercase">
            <tr>
                <th class="border-secondary w-50 text-start">
                    <a class="link-primary text-decoration-none" href="{{ url('frontend.forum.index.page', {'forumId': forum.id}) }}">{{ forum.name }}</a>
                </th>
                <th class="border-secondary w-25">{{ 'frontend.general.statistic.header-text'|trans }}</th>
                <th class="border-secondary w-25">{{ 'frontend.general.contribution.header-text'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% include '@Frontend/components/list-topic.html.twig' %}
            </tbody>
        </table>
    {% endfor %}
{% endblock %}
