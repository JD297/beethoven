{% extends 'base.html.twig' %}

{% block base_content_inner %}
    <h1 class="border-bottom border-secondary pb-2">{{ 'frontend.page.auth.register.title'|trans }}</h1>

    {{ form_start(form) }}
        <div class="my-3">
            {{ form_label(form.username, 'frontend.page.auth.register.input.username.label'|trans ) }}
            {{ form_widget(form.username, {'attr': {
                'class': 'form-control mt-1 mb-2',
                'placeholder': 'frontend.page.auth.register.input.username.placeholder'|trans
            }}) }}
            {{ form_errors(form.username) }}
        </div>

        <div class="my-3">
            {{ form_label(form.plainPassword, 'frontend.page.auth.register.input.password.label'|trans) }}
            {{ form_widget(form.plainPassword, {'attr': {
                'class': 'form-control mt-1 mb-2',
                'placeholder': 'frontend.page.auth.register.input.password.label'|trans
            }}) }}
            {{ form_errors(form.plainPassword) }}
        </div>

        <div class="my-3">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
